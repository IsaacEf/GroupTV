{
  "manifest_version": 3,
  "name": "GroupTV - Twitch Streamer Groups",
  "version": "1.0.0",
  "description": "Create custom groups of Twitch streamers for easy access in the sidebar",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.twitch.tv/*",
    "https://api.twitch.tv/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.twitch.tv/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Manage Streamer Groups",
    "default_icon": {
      "16": "icons/logo.png",
      "48": "icons/logo.png",
      "128": "icons/logo.png"
    }
  },
  "icons": {
    "16": "icons/logo.png",
    "48": "icons/logo.png",
    "128": "icons/logo.png"
  }
}
